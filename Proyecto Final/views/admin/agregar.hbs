<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar Contenido</h4>
            <form action="/admin/contenido/agregar" method="post">
                
                <div class="form-group">
                    {{!-- <input type="text" class="form-control" placeholder="Titulo" name="titulo"> --}}
                    <input type="text" class="form-control" id="evento" name="evento" required>
                </div>
                <div class="form-group">
                    {{!-- <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea> --}}
                    <input type="text" class="form-control" id="categorias" name="categorias" required>

                </div>
                <div class="form-group">
                    {{!-- <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea> --}}
                    {{!-- <input type="text" class="form-control" id="descripcion" name="descripcion" required> --}}
                    <textarea type="text" class="form-control" id="descripcion" name="descripcion" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>